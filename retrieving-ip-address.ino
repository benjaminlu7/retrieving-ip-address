#include <SPI.h>
#include <Ethernet.h>

/*
================================================================================================
 2.0 - Setup
================================================================================================
*/
void setup() {
  Serial.begin(9600);

  if (Ethernet.begin() == 0) {
    Serial.println("Failed to Configured Ethernet Using DHCP");
  }
  delay(2000);
  Serial.println("Retrieving IP Address...");
  delay(2000);
  Serial.println(Ethernet.localIP());
}

